<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="comment"
            type="com.example.recipemanager.appDatabase.Comment" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comment_list_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/rounded_edge"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="90dp"
        android:id="@+id/profile_name"
        android:text="@{comment.profileName}"
        />
    <ImageView
        android:id="@+id/edit_comment"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_edit_black_18dp"
        app:layout_constraintLeft_toRightOf="@id/profile_name"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/delete_comment"
        app:layout_constraintLeft_toRightOf="@id/edit_comment"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_delete_outline_black_18dp"
        android:layout_marginLeft="10dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="@{comment.commentText}"
            android:layout_marginBottom="40dp"/>
    <ImageView
        android:id="@+id/star_5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/round_star_border_black_18dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/star_3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/round_star_border_black_18dp"
        app:layout_constraintEnd_toStartOf="@id/star_4"
        />
    <ImageView
        android:id="@+id/star_4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/round_star_border_black_18dp"
        app:layout_constraintEnd_toStartOf="@id/star_5"
        />
    <ImageView
        android:id="@+id/star_2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/round_star_border_black_18dp"
        app:layout_constraintEnd_toStartOf="@id/star_3"
        />
    <ImageView
        android:id="@+id/star_1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/round_star_border_black_18dp"
        app:layout_constraintEnd_toStartOf="@id/star_2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>